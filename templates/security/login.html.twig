{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="flex justify-center">
<div class="h-fit w-40 p-6 bg-konbini-100 mt-12 rounded-lg">
<div class="solo flex flex-col items-center justify-center pt-10">
		<img src="{{ asset('build/images/logo.jpg')}}" alt="Image" class="object-cover mb-2">
		<p class="text-s font-bold tracking-widest">Se connecter</p>
	</div>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 flex justify-center p-4">
            Vous êtes déjà connecté, <a href="{{ path('app_formulaire') }}">veuillez vous rendre sur la page formulaire
</a>
        </div>
        {% else %}
<div class="only_login p-2 flex justify-center">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control ml-4 mr-6" autocomplete="email" required autofocus>
    </div>
    <div class="only_login p-2 mr-8 flex justify-center">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control ml-4 mr-6" autocomplete="current-password" required>
</div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
    #}

        <div class="checkbox mb-3 flex justify-center">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    
<div class="flex justify-center">
    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    </div>

    <div class="flex justify-center border-t-4 border-zinc-500">
    <a href="{{ path('app_register') }}">S'enregistrer</a>
    </div>
</form>
</div>
</div>
    {% endif %}
{% endblock %}
